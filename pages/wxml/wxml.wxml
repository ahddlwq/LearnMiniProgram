<!--pages/wxml/wxml.wxml-->
<view>{{message}}</view>
<view>{{firstname}} {{lastname}}</view>
<view>{{firstname + ' ' + lastname}}</view>
<view>{{age>=18?"成年人":"未成年人"}}</view>
<view>{{nowTime}}</view>

<button size='mini' bindtap="handleSwitchColor">切换颜色</button>
<view class='box {{isActive ? "active" : " "}}'>哈哈哈</view>

<view wx:for="{{['abc','cba','nba']}}">{{index}}.{{item}}</view>
<view wx:for="abcd">{{index}}.{{item}}</view>
<view wx:for="{{5}}">{{index}}.{{item}}</view>



<!-- 1.定义模板 -->
<template name="msgItem">
  <view>{{index}}.{{content}}-{{time}}</view>
</template>

<!-- 2.使用模板 -->
<template is="msgItem" data="{{index: 0, content: '哈哈哈', time: '2018.08.08'}}" />
<template is="msgItem" data="{{index: 1, content: '呵呵呵', time: '2019.09.09'}}" />
<template is="msgItem" data="{{index: 2, content: '嘿嘿嘿', time: '2020.10.10'}}" />
<!-- 使用ES6的扩展运算符 -->
<template is="msgItem" data="{{...item}}" />

